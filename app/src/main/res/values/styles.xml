<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/icons</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- DetailView Texts -->
    <style name="LabelDetailView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_color_70</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="LabelDetailView.Response" parent="LabelDetailView">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LabelDetailView.Response.Big" parent="LabelDetailView.Response">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="LabelDetailView.Title" parent="LabelDetailView.Response.Big">
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="LabelDetailView.SubTitle" parent="LabelDetailView">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="LabelDetailView.Switch" parent="LabelDetailView">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- FlatButton -->
    <style name="AppCompat.Button.Flat.Common" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/btn_flat_selector</item>
        <item name="android:minWidth">@dimen/btn_flat_min_width</item>
        <item name="android:minHeight">@dimen/btn_flat_min_height</item>
        <item name="android:textColor">@drawable/color_btn_flat_selector</item>
        <item name="android:paddingLeft">@dimen/btn_flat_padding</item>
        <item name="android:paddingRight">@dimen/btn_flat_padding</item>
        <item name="android:layout_marginLeft">@dimen/btn_flat_margin</item>
        <item name="android:layout_marginRight">@dimen/btn_flat_margin</item>
    </style>

    <!-- TripButton -->
    <style name="TripButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_colored_trip_selector</item>
        <item name="android:minWidth">@dimen/btn_flat_min_width</item>
        <item name="android:minHeight">@dimen/btn_flat_min_height</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:paddingLeft">@dimen/btn_flat_padding</item>
        <item name="android:paddingRight">@dimen/btn_flat_padding</item>
        <item name="android:layout_marginLeft">@dimen/btn_flat_margin</item>
        <item name="android:layout_marginRight">@dimen/btn_flat_margin</item>
    </style>

    <!-- CreditButton -->
    <style name="CreditButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_colored_credit_selector</item>
        <item name="android:minWidth">@dimen/btn_flat_min_width</item>
        <item name="android:minHeight">@dimen/btn_flat_min_height</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:paddingLeft">@dimen/btn_flat_padding</item>
        <item name="android:paddingRight">@dimen/btn_flat_padding</item>
        <item name="android:layout_marginLeft">@dimen/btn_flat_margin</item>
        <item name="android:layout_marginRight">@dimen/btn_flat_margin</item>
    </style>

    <!-- Config -->
    <style name="titleConfigView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="textConfig" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SwitchConfig" parent="LabelDetailView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppCompat.Button.Flat.Common.Config" parent="AppCompat.Button.Flat.Common">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>
